<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewEliminarUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="146dp"
            android:layout_marginTop="54dp"
            android:text="Eliminar Usuario" />

        <TextView
            android:id="@+id/textViewElimarEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewEliminarUser"
            android:layout_marginStart="70dp"
            android:layout_marginTop="75dp"
            android:text="Email" />

        <EditText
            android:id="@+id/editTextEliminarEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewElimarEmail"
            android:layout_alignBottom="@+id/textViewElimarEmail"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/textViewElimarEmail"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/buttonEliminaUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textViewEliminarUser"
            android:layout_below="@+id/editTextEliminarEmail"
            android:layout_marginTop="114dp"
            android:text="Eliminar" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>