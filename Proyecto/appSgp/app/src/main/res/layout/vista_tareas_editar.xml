<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewEditarTareas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="Editar Tarea" />

        <TextView
            android:id="@+id/textViewEditarInfoIdTareas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewEditarTareas"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="ID de la Tarea a editar" />

        <EditText
            android:id="@+id/editTextEditarIdTareas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textViewEditarTareas"
            android:layout_below="@+id/textViewEditarInfoIdTareas"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:inputType="number"
            android:text="ID Tarea" />

        <EditText
            android:id="@+id/editTextEditarNombreTareas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textViewEditarTareas"
            android:layout_below="@+id/editTextEditarIdTareas"
            android:layout_marginTop="51dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Nombre" />

        <EditText
            android:id="@+id/editTextDescripcionTareas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/editTextEditarNombreTareas"
            android:layout_centerVertical="true"
            android:ems="10"
            android:inputType="text"
            android:text="Descripcion" />

        <EditText
            android:id="@+id/editTextEditarTareasFechaIni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textViewEditarTareas"
            android:layout_below="@+id/editTextDescripcionTareas"
            android:layout_marginTop="11dp"
            android:ems="10"
            android:inputType="text"
            android:text="Fecha Inicio" />

        <EditText
            android:id="@+id/editTextEditarTareasFechaFin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editTextEditarTareasFechaIni"
            android:layout_below="@+id/editTextEditarTareasFechaIni"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="text"
            android:text="Fecha Fin" />

        <Button
            android:id="@+id/buttonEditarTareas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/buttonEditarGuardarTarea"
            android:layout_centerHorizontal="true"
            android:text="Editar" />

        <TextView
            android:id="@+id/textViewEditarInfoTareas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="152dp"
            android:text="Ingrese los datos a editar" />

        <Button
            android:id="@+id/buttonEditarGuardarTarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="36dp"
            android:layout_marginEnd="49dp"
            android:enabled="false"
            android:text="Guardar" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>